{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div class="d-flex justify-content-between">
            <div>
                <h1>Groups</h1>
            </div>

            <div>
                <a class="btn btn-primary" href="{{ path('web_group_create') }}" role="button">
                    <i class="bi-plus-circle-fill"></i>
                    Create new group
                </a>
            </div>
        </div>
        <table class="table table-striped init-datatable">
            <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Amount of users</th>
                <th scope="col">Created</th>
                <th scope="col">Last updated</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr {{ stimulus_controller('groups/actions', {
                    'deleteUrl': path('web_group_delete', {'id': group.id})
                }) }}>
                    <th scope="row" class="align-middle">{{ group.id }}</th>
                    <td class="align-middle">{{ group.name }}</td>
                    <td class="align-middle">{{ group.users.count }}</td>
                    <td class="align-middle">{{ group.createdAt }}</td>
                    <td class="align-middle">{{ group.updatedAt }}</td>
                    <td class="align-middle">
                        <a class="btn btn-sm btn-primary" href="{{ path('web_group_update', {'id': group.id}) }}">
                            <i class="bi-pencil"></i>
                            Edit
                        </a>

                        <a {{ stimulus_target('groups/actions', 'deleteButton')}} class="btn btn-sm btn-outline-danger" {{ stimulus_action('groups/actions', 'confirmDelete') }}>
                            <i class="bi-trash"></i>
                            Delete
                        </a>

                        <form {{ stimulus_target('groups/actions', 'deleteForm')}} action="{{ path('web_group_delete', {'id': group.id} ) }}" method="POST" class="d-none">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi-trash-fill"></i>
                                Confirm delete
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
