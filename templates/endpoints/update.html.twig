{% extends app.request.attributes.has('isModalRequest') ? 'modal.html.twig' : 'base.html.twig' %}

{% block body %}
    <h1>Update endpoint {{ endpoint.name }}</h1>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.application) }}
    {{ form_row(form.url) }}
    {{ form_row(form.driver) }}
    {{ form_row(form.driverOptions) }}
    <div class="d-flex">
        <div class="me-2">
            <a class="btn btn-outline-danger" href="{{ path('web_application_details', {'id': application.id}) }}">
                <i class="bi-arrow-left"></i>
                Cancel
            </a>
        </div>
        {{ form_row(form.submit) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
