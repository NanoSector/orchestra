{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <div class="d-flex justify-content-between">
            <div>
                <h1>Users</h1>
            </div>

            <div>
                <a class="btn btn-primary" href="{{ path('web_user_create') }}" role="button">
                    <i class="bi-plus-circle-fill"></i>
                    Create new user
                </a>
            </div>
        </div>
        <table class="table table-striped init-datatable">
            <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Registered</th>
                <th scope="col">Last updated</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr {{ stimulus_controller('users/actions', {
                    'deleteUrl': path('web_user_delete', {'id': user.id})
                }) }}>
                    <th scope="row" class="align-middle">{{ user.id }}</th>
                    <td class="align-middle">{{ user.username }}</td>
                    <td class="align-middle">{{ user.email }}</td>
                    <td class="align-middle">{{ user.createdAt }}</td>
                    <td class="align-middle">{{ user.updatedAt }}</td>
                    <td class="align-middle">
                        <a class="btn btn-sm btn-primary" href="{{ path('web_user_update', {'id': user.id}) }}">
                            <i class="bi-pencil"></i>
                            Edit
                        </a>

                        <a {{ stimulus_target('users/actions', 'deleteButton')}} class="btn btn-sm btn-outline-danger" {{ stimulus_action('users/actions', 'confirmDelete') }}>
                            <i class="bi-trash"></i>
                            Delete
                        </a>

                        <form {{ stimulus_target('users/actions', 'deleteForm')}} action="{{ path('web_user_delete', {'id': user.id} ) }}" method="POST" class="d-none">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi-trash-fill"></i>
                                Confirm delete
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
