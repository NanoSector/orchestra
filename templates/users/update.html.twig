{% extends app.request.attributes.has('isModalRequest') ? 'modal.html.twig' : 'base.html.twig' %}

{% block body %}
    <h1>Update user {{ user.username }}</h1>

    <div class="row">
        <div class="col-xl-10">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h2 class="card-title">User details</h2>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}
                    {{ form_row(form.formRoles) }}
                    {{ form_row(form.groups) }}
                    <div class="d-flex">
                        <div class="me-2">
                            <a class="btn btn-outline-danger" href="{{ path('web_user_index') }}">
                                <i class="bi-arrow-left"></i>
                                Cancel
                            </a>
                        </div>
                        {{ form_row(form.submit) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
